@model List<KuponApp.Models.Coupon>

@{
    ViewData["Title"] = "Admin Panel";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-tachometer-alt"></i> Admin Panel</h2>
    <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger">
        <i class="fas fa-sign-out-alt"></i> Çıkış Yap
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Toplam Kullanıcı</h5>
                <h3>@Model.Select(c => c.UserId).Distinct().Count()</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Toplam Kupon</h5>
                <h3>@Model.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h5>Aktif Kupon</h5>
                <h3>@Model.Count(c => !c.IsUsed)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5>Toplam İndirim</h5>
                <h3>@Model.Sum(c => c.DiscountAmount).ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Kupon Listesi</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Kupon Kodu</th>
                        <th>Kullanıcı</th>
                        <th>E-posta</th>
                        <th>Telefon</th>
                        <th>İndirim Tutarı</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var coupon in Model)
                    {
                        <tr>
                            <td><strong>@coupon.CouponCode</strong></td>
                            <td>@coupon.User.FirstName @coupon.User.LastName</td>
                            <td>@coupon.User.Email</td>
                            <td>@coupon.User.Phone</td>
                            <td><span class="badge bg-success">@coupon.DiscountAmount.ToString("C")</span></td>
                            <td>@coupon.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (coupon.IsUsed)
                                {
                                    <span class="badge bg-danger">Kullanıldı</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>